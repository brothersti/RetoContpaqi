@model IEnumerable<Employee>


@if (Model.Any())
{
    <partial name="_CardHeader" />

    <div class="row">
        @foreach (var employee in @Model.ToList())
        {
            <div class="card border-primary m-1 mt-4" style="max-width: 49%;">
                <div class="card-header"><h3>Información</h3></div>
                <div class="card-body text-primary">
                    <h5 class="card-text"><b>Nombre completo:</b> @employee.Nombre @employee.ApellidoPaterno @employee.ApellidoMaterno</h5>
                    <p class="card-text"><b>Rfc:</b> @employee.Rfc</p>
                    <p class="card-text"><b>Email:</b> @employee.Email</p>
                    <p class="card-text"><b>Teléfono:</b> @employee.Telefono</p>
                    <p class="card-text"><b>Puesto:</b> @employee.Puesto</p>
                </div>
            </div>
        }
    </div>


}
else
{
    <partial name="_CardHeader" />

    <div class="card-body">
        <p class="label label-info" style="text-align:center;">No hay información</p>
    </div>
}
