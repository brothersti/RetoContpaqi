@model Employee

<div class="card-body">
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Nombre completo</th>
                <th scope="col">Email</th>
                <th scope="col">Puesto</th>
                <th scope="col">Rfc</th>
                <th scope="col">Fecha de alta</th>
                <th class="float-right" scope="col">Acciones</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th scope="row">@Model.EmpleadoId</th>
                <td>@Model.Nombre @Model.ApellidoPaterno @Model.ApellidoMaterno</td>
                <td>@Model.Email</td>
                <td>@Model.Puesto</td>
                <td>@Model.Rfc</td>
                <td>@Model.FechaAlta.ToString("d")</td>

                <td class="float-right">
                    <button type="button" class="btn btn-primary"
                            asp-controller="Employee"
                            asp-action="Details"
                            asp-route-id="@Model.EmpleadoId">
                        Editar
                    </button>
                    <button type="button" class="btn btn-danger"
                            asp-controller="Employee"
                            asp-action="Details"
                            asp-route-id="@Model.EmpleadoId">
                        Eliminar
                    </button>
                </td>
            </tr>
        </tbody>
    </table>
</div>